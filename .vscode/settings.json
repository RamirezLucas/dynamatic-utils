{
    "editor.formatOnSave": true,
    "editor.detectIndentation": true,
    "editor.defaultFormatter": "xaver.clang-format",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.sourceDirectory": "${workspaceFolder:tools}/.",
    "cmake.buildDirectory": "${workspaceFolder:tools}/build",
    "cmake.generator": "Ninja",
    "cmake.configureArgs": [
        "-DLLVM_DIR=${env:FRONTEND_PATH}/polygeist/llvm-project/build/lib/cmake/llvm",
        "-DMLIR_DIR=${env:FRONTEND_PATH}/polygeist/llvm-project/build/lib/cmake/mlir",
        "-DCMAKE_C_COMPILER=${env:POLYGEIST_PATH}/polygeist/llvm-project/build/bin/clang",
        "-DCMAKE_CXX_COMPILER=${env:POLYGEIST_PATH}/polygeist/llvm-project/build/bin/clang++"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.formatting.provider": "black",
    "files.associations": {
        "*.inc": "cpp"
    }
}